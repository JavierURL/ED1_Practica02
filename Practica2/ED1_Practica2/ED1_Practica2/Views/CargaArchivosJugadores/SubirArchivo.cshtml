@model List<Jugadores>

@{
	ViewData["titulo"] = "Carga de archivo de lista de jugadores"; 
}

<h1>@ViewData["titulo"]</h1>

@using (Html.BeginForm("SubirArchivo", "CargaArchivosJugadores", FormMethod.Post, new{enctype = "multipart/form-data"}))
{
	<label>Subir archivo</label>

	<input type = "file", name = "archivo"/>
	<input type = "submit", name = "Enviar"/>

	@if (Model != null)
	{
		<table class= "table table-hover">
            <thead>
                <tr>
                    <td>Nombre</td>
                    <td>Apellido</td>
                    <td>Rol</td>
                    <td>KDA</td>
                    <td>CreepScore</td>
                    <td>Equipo</td>
                </tr>
            </thead>
        
            @foreach(var jugadores in Model)
            {
                <tr>
                    <td>@jugadores.Nombre</td>    
                    <td>@jugadores.Apellido</td>    
                    <td>@jugadores.Rol</td>    
                    <td>@jugadores.KDA</td>
                    <td>@jugadores.CreepScore</td>    
                    <td>@jugadores.Equipo</td>    
                </tr>
            }
        </table>
	}





}